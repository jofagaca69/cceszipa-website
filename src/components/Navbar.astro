---
import "../styles/global.css";
import { Image } from "astro:assets";
import CCAMPESTRE from "../images/logos/LogoHorLetraCafe.svg";

interface Props {
    variant?: 'default' | 'transparent' | 'fixed';
}

const { variant = 'default' } = Astro.props;

// Obtener la ruta actual
const currentPath = Astro.url.pathname;

// Definir las rutas de navegación
const navItems = [
    { name: 'Inicio', href: '/', ariaLabel: 'Ir a la página de inicio' },
    { name: 'Sobre mí', href: '/sobre-mi', ariaLabel: 'Conocer más sobre mí' },
    { name: 'Proyectos', href: '/proyectos', ariaLabel: 'Ver mis proyectos' },
    { name: 'Blog', href: '/blog', ariaLabel: 'Leer el blog' },
    { name: 'Contacto', href: '/contacto', ariaLabel: 'Ponerse en contacto' }
];

// Función para determinar si un enlace está activo
const isActive = (href: string) => {
    if (href === '/' && currentPath === '/') return true;
    if (href !== '/' && currentPath.startsWith(href)) return true;
    return false;
};
---

<nav class={`navbar navbar--${variant} my-4 mx-4 rounded-xl shadow-xl`} role="navigation" aria-label="Navegación principal">
    <div class="navbar__container">
        <div class="navbar__brand">
            <a href="/" class="navbar__logo" aria-label="Ir al inicio">
                <Image 
                    src={CCAMPESTRE} 
                    alt="Colegio Campestre Exploradores del Saber" 
                    width={200} 
                    height={100}
                    class="navbar__logo-img"
                />
            </a>
        </div>
        <button
            class="navbar__toggle"
            type="button"
            aria-label="Abrir menú de navegación"
            aria-expanded="false"
            aria-controls="navbar-menu"
        >
            <span class="navbar__hamburger"></span>
            <span class="navbar__hamburger"></span>
            <span class="navbar__hamburger"></span>
        </button>
        <div class="navbar__menu" id="navbar-menu">
            <ul class="navbar__nav" role="list">
                {navItems.map(item => (
                    <li class="navbar__item">
                        <a
                            href={item.href}
                            class={`navbar__link ${isActive(item.href) ? 'navbar__link--active' : ''}`}
                            aria-label={item.ariaLabel}
                            aria-current={isActive(item.href) ? 'page' : undefined}
                        >
                            {item.name}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </div>
</nav>

<style>
.navbar {
    background: #F4F4F5;
    border-bottom: 1px solid var(--navbar-border, #e5e7eb);
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    position: relative;
    z-index: 1000;
}

.navbar__container {
    max-width: 1200px;
    min-height: 100px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.navbar__brand {
    display: flex;
    align-items: center;
}

.navbar__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
}

.navbar__logo:hover {
    opacity: 0.8;
}

.navbar__logo-img {
    width: 200px;
    height: 100px;
    object-fit: contain;
}

.navbar__toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1002;
}

.navbar__hamburger {
    width: 28px;
    height: 3px;
    background: var(--color-primary, #e67e22);
    margin: 3px 0;
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
}

.navbar__menu {
    display: flex;
    align-items: center;
}

.navbar__nav {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
}

.navbar__item {
    position: relative;
}

.navbar__link {
    color: var(--navbar-link-color, #6b7280);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.3s ease;
    display: block;
}

.navbar__link:hover {
    color: var(--navbar-link-hover, #1f2937);
}

.navbar__link--active {
    color: var(--color-primary);
    font-weight: 600;
}

.navbar__link--active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
}

@media (max-width: 900px) {
    .navbar__logo-img {
        width: 140px;
        height: 70px;
    }
}

@media (max-width: 768px) {
    .navbar {
        min-height: 80px;
        padding: 0;
    }
    .navbar__container {
        min-height: 80px;
        padding: 0 0.5rem;
    }
    .navbar__logo-img {
        width: 110px;
        height: 55px;
    }
    .navbar__toggle {
        display: flex;
    }
    .navbar__menu {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #fff;
        border-radius: 0 0 1rem 1rem;
        box-shadow: 0 8px 24px 0 rgba(0,0,0,0.10);
        margin: 0 0.5rem;
        padding: 1.5rem 1rem 2rem 1rem;
        display: block;
        opacity: 0;
        pointer-events: none;
        transform: translateY(-10px);
        transition: all 0.3s cubic-bezier(.4,2,.6,1);
    }
    .navbar__menu.navbar__menu--open {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
    }
    .navbar__nav {
        flex-direction: column;
        gap: 0.5rem;
    }
    .navbar__item {
        width: 100%;
    }
    .navbar__link {
        padding: 1rem 0.5rem;
        border-radius: 0.5rem;
        font-size: 1.1rem;
        color: #222;
        background: transparent;
        text-align: left;
    }
    .navbar__link--active {
        background: var(--color-primary);
        color: #fff;
    }
    .navbar__link--active::after {
        display: none;
    }
}

@media (max-width: 480px) {
    .navbar__logo-img {
        width: 90px;
        height: 45px;
    }
    .navbar__menu {
        padding: 1rem 0.5rem 1.5rem 0.5rem;
    }
}

.navbar__toggle[aria-expanded="true"] .navbar__hamburger:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
    background: #e67e22;
}
.navbar__toggle[aria-expanded="true"] .navbar__hamburger:nth-child(2) {
    opacity: 0;
}
.navbar__toggle[aria-expanded="true"] .navbar__hamburger:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
    background: #e67e22;
}
</style>

<script>
// Funcionalidad del menú móvil
const toggle = document.querySelector('.navbar__toggle');
const menu = document.querySelector('.navbar__menu');

if (toggle && menu) {
    toggle.addEventListener('click', () => {
        const isOpen = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', (!isOpen).toString());
        toggle.setAttribute('aria-label', isOpen ? 'Abrir menú de navegación' : 'Cerrar menú de navegación');
        menu.classList.toggle('navbar__menu--open', !isOpen);
    });
    // Cerrar menú al hacer clic en un enlace (móvil)
    const links = menu.querySelectorAll('.navbar__link');
    links.forEach(link => {
        link.addEventListener('click', () => {
            toggle.setAttribute('aria-expanded', 'false');
            menu.classList.remove('navbar__menu--open');
        });
    });
    // Cerrar menú al hacer clic fuera
    document.addEventListener('click', (e) => {
        if (!toggle.contains(e.target as Node) && !menu.contains(e.target as Node)) {
            toggle.setAttribute('aria-expanded', 'false');
            menu.classList.remove('navbar__menu--open');
        }
    });
}
</script>